# Application
APP_NAME=PPE Safety Compliance System
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ppe_compliance
DB_ECHO=False

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Model Paths
YOLO_PERSON_MODEL=models/weights/yolov8n.pt
YOLO_PPE_MODEL=models/weights/yolov8_ppe.pt
FACENET_MODEL=vggface2

# Detection Settings
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
MAX_PERSONS_PER_FRAME=10
FRAME_SKIP=2

# Video Processing
MAX_UPLOAD_SIZE_MB=500
SUPPORTED_FORMATS=mp4,avi,mov,mkv
FPS_TARGET=30

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.6
FACE_EMBEDDING_DIM=512

# Storage
UPLOAD_DIR=../data/uploads
SNAPSHOT_DIR=../data/snapshots
VIDEO_DIR=../data/videos

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
